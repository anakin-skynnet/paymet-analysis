{
  "version": "1.0",
  "name": "Fraud & Risk Analysis Dashboard",
  "displayName": "Fraud & Risk Analysis",
  "description": "Comprehensive fraud detection and risk monitoring",
  "tags": ["fraud", "risk", "security", "aml"],
  "pages": [
    {
      "name": "fraud_risk_analysis",
      "displayName": "Fraud & Risk Analysis",
      "layout": [
        {
          "widget": {
            "name": "header",
            "textbox_spec": "## Fraud & Risk Analysis\n\nReal-time fraud detection and risk assessment metrics"
          },
          "position": { "x": 0, "y": 0, "width": 12, "height": 2 }
        },
        {
          "widget": {
            "name": "avg_fraud_score",
            "queries": [
              {
                "name": "fraud_kpi",
                "query": {
                  "datasetName": "${var.catalog}.${var.schema}.v_executive_kpis",
                  "query_text": "SELECT avg_fraud_score FROM v_executive_kpis LIMIT 1",
                  "warehouse_id": "${var.warehouse_id}"
                }
              }
            ],
            "spec": {
              "version": 2,
              "widgetType": "counter",
              "encodings": {
                "value": {
                  "fieldName": "avg_fraud_score",
                  "displayName": "Avg Fraud Score"
                }
              },
              "format": { "notation": "standard", "minimumFractionDigits": 3 }
            }
          },
          "position": { "x": 0, "y": 2, "width": 3, "height": 4 }
        },
        {
          "widget": {
            "name": "avg_aml_risk",
            "queries": [
              {
                "name": "aml_kpi",
                "query": {
                  "datasetName": "${var.catalog}.${var.schema}.v_executive_kpis",
                  "query_text": "SELECT avg_aml_risk_score FROM v_executive_kpis LIMIT 1",
                  "warehouse_id": "${var.warehouse_id}"
                }
              }
            ],
            "spec": {
              "version": 2,
              "widgetType": "counter",
              "encodings": {
                "value": {
                  "fieldName": "avg_aml_risk_score",
                  "displayName": "Avg AML Risk"
                }
              },
              "format": { "notation": "standard", "minimumFractionDigits": 3 }
            }
          },
          "position": { "x": 3, "y": 2, "width": 3, "height": 4 }
        },
        {
          "widget": {
            "name": "high_risk_txns",
            "queries": [
              {
                "name": "risk_count",
                "query": {
                  "datasetName": "${var.catalog}.${var.schema}.v_last_hour_performance",
                  "query_text": "SELECT high_risk_transactions FROM v_last_hour_performance",
                  "warehouse_id": "${var.warehouse_id}"
                }
              }
            ],
            "spec": {
              "version": 2,
              "widgetType": "counter",
              "encodings": {
                "value": {
                  "fieldName": "high_risk_transactions",
                  "displayName": "High Risk Txns (1h)"
                }
              }
            }
          },
          "position": { "x": 6, "y": 2, "width": 3, "height": 4 }
        },
        {
          "widget": {
            "name": "auth_3ds_usage",
            "queries": [
              {
                "name": "auth_kpi",
                "query": {
                  "datasetName": "${var.catalog}.${var.schema}.v_executive_kpis",
                  "query_text": "SELECT auth_3ds_usage_pct FROM v_executive_kpis LIMIT 1",
                  "warehouse_id": "${var.warehouse_id}"
                }
              }
            ],
            "spec": {
              "version": 2,
              "widgetType": "counter",
              "encodings": {
                "value": {
                  "fieldName": "auth_3ds_usage_pct",
                  "displayName": "3DS Usage %"
                }
              },
              "format": { "suffix": "%" }
            }
          },
          "position": { "x": 9, "y": 2, "width": 3, "height": 4 }
        },
        {
          "widget": {
            "name": "fraud_by_geography",
            "queries": [
              {
                "name": "geo_fraud_query",
                "query": {
                  "datasetName": "${var.catalog}.${var.schema}.v_performance_by_geography",
                  "query_text": "SELECT country, avg_fraud_score, transaction_count, approval_rate_pct FROM v_performance_by_geography ORDER BY avg_fraud_score DESC LIMIT 20",
                  "warehouse_id": "${var.warehouse_id}"
                }
              }
            ],
            "spec": {
              "version": 2,
              "widgetType": "bar-chart",
              "encodings": {
                "x": { "fieldName": "country", "displayName": "Country" },
                "y": [
                  { "fieldName": "avg_fraud_score", "displayName": "Avg Fraud Score" }
                ]
              }
            }
          },
          "position": { "x": 0, "y": 6, "width": 6, "height": 8 }
        },
        {
          "widget": {
            "name": "fraud_trend_hourly",
            "queries": [
              {
                "name": "fraud_trend_query",
                "query": {
                  "datasetName": "${var.catalog}.${var.schema}.v_approval_trends_hourly",
                  "query_text": "SELECT hour, avg_fraud_score, transaction_count FROM v_approval_trends_hourly ORDER BY hour DESC LIMIT 168",
                  "warehouse_id": "${var.warehouse_id}"
                }
              }
            ],
            "spec": {
              "version": 2,
              "widgetType": "line-chart",
              "encodings": {
                "x": { "fieldName": "hour", "displayName": "Time" },
                "y": [
                  { "fieldName": "avg_fraud_score", "displayName": "Fraud Score" }
                ]
              }
            }
          },
          "position": { "x": 6, "y": 6, "width": 6, "height": 8 }
        },
        {
          "widget": {
            "name": "active_fraud_alerts",
            "queries": [
              {
                "name": "fraud_alerts_query",
                "query": {
                  "datasetName": "${var.catalog}.${var.schema}.v_active_alerts",
                  "query_text": "SELECT alert_type, severity, current_value, threshold_value, alert_message FROM v_active_alerts WHERE alert_type = 'HIGH_FRAUD_RATE' ORDER BY severity",
                  "warehouse_id": "${var.warehouse_id}"
                }
              }
            ],
            "spec": {
              "version": 2,
              "widgetType": "table",
              "encodings": {
                "columns": [
                  { "fieldName": "alert_type", "displayName": "Alert Type" },
                  { "fieldName": "severity", "displayName": "Severity" },
                  { "fieldName": "current_value", "displayName": "Current" },
                  { "fieldName": "threshold_value", "displayName": "Threshold" },
                  { "fieldName": "alert_message", "displayName": "Message" }
                ]
              }
            }
          },
          "position": { "x": 0, "y": 14, "width": 12, "height": 6 }
        },
        {
          "widget": {
            "name": "segment_fraud_breakdown",
            "queries": [
              {
                "name": "segment_fraud_query",
                "query": {
                  "datasetName": "${var.catalog}.${var.schema}.v_merchant_segment_performance",
                  "query_text": "SELECT merchant_segment, avg_fraud_score, transaction_count, approval_rate_pct, auth_3ds_usage_pct FROM v_merchant_segment_performance ORDER BY avg_fraud_score DESC",
                  "warehouse_id": "${var.warehouse_id}"
                }
              }
            ],
            "spec": {
              "version": 2,
              "widgetType": "table",
              "encodings": {
                "columns": [
                  { "fieldName": "merchant_segment", "displayName": "Segment" },
                  { "fieldName": "avg_fraud_score", "displayName": "Fraud Score" },
                  { "fieldName": "transaction_count", "displayName": "Transactions" },
                  { "fieldName": "approval_rate_pct", "displayName": "Approval %" },
                  { "fieldName": "auth_3ds_usage_pct", "displayName": "3DS Usage %" }
                ]
              }
            }
          },
          "position": { "x": 0, "y": 20, "width": 12, "height": 8 }
        }
      ]
    }
  ],
  "datasets": []
}
